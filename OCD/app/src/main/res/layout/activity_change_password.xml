<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".profile.ChangePasswordActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp">

        <ImageView android:id="@+id/backArrow"
            android:layout_height="@dimen/_25pxh"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_width="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_25pxh"
            android:paddingStart="@dimen/_5pxh"
            android:paddingEnd="@dimen/_5pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrow3"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_arrow3"/>
        <TextView android:ellipsize="end"
            android:id="@+id/txtChangePassword"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_1pxv"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="@string/lbl_change_password"
            style="@style/txtDMSansbold20"
            tools:text="@string/lbl_change_password"/>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarToolbar"
        android:layout_above="@+id/bottomNavigation">

        <LinearLayout
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_13pxv"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <LinearLayout android:id="@+id/previousPassword"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_5pxh"
                android:layout_marginBottom="@dimen/_5pxh"
                android:background="@drawable/rectangle_border_gray_800_19_radius_6"
                android:orientation="horizontal" >

                <EditText android:ellipsize="end"
                    android:id="@+id/txtEnterPassword"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_weight="0.85"
                    android:singleLine="true"
                    android:hint="@string/lbl_enter_password"
                    android:background="@android:color/transparent"
                    style="@style/etRoundedOutline_2"
                    tools:text="@string/lbl_enter_password"
                    />


                <FrameLayout android:id="@+id/btnShowPasswordPreviousPassowrd"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_13pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_width="@dimen/_20pxh">
                    <ImageView
                        android:id="@+id/imgEyePreviousPassword"
                        android:layout_gravity="top|start"
                        android:layout_height="@dimen/_14pxv"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_eye"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_eye"
                        />
                </FrameLayout>

            </LinearLayout>

            <LinearLayout android:id="@+id/updatedPassword"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_12pxh"
                android:layout_marginBottom="@dimen/_5pxh"
                android:background="@drawable/rectangle_border_gray_800_19_radius_6"
                android:orientation="horizontal" >

                <EditText android:ellipsize="end"
                    android:id="@+id/txtNewPassword"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_weight="0.85"
                    android:singleLine="true"
                    android:hint="@string/lbl_new_password"
                    android:background="@android:color/transparent"
                    style="@style/etRoundedOutline_2"
                    tools:text="@string/lbl_new_password"
                    />


                <FrameLayout android:id="@+id/btnShowPasswordNewPassowrd"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_13pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_width="@dimen/_20pxh">
                    <ImageView
                        android:id="@+id/imgEyeNewPassword"
                        android:layout_gravity="top|start"
                        android:layout_height="@dimen/_14pxv"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_eye"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_eye"
                        />
                </FrameLayout>

            </LinearLayout>


            <LinearLayout android:id="@+id/confirmPassword"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_12pxh"
                android:layout_marginBottom="@dimen/_5pxh"
                android:background="@drawable/rectangle_border_gray_800_19_radius_6"
                android:orientation="horizontal" >

                <EditText android:ellipsize="end"
                    android:id="@+id/txtConfirmPassword"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_weight="0.85"
                    android:singleLine="true"
                    android:hint="@string/msg_re_enter_new_pa"
                    android:background="@android:color/transparent"
                    style="@style/etRoundedOutline_2"
                    tools:text="@string/msg_re_enter_new_pa"
                    />


                <FrameLayout android:id="@+id/btnShowPasswordConfirmPassowrd"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_13pxh"
                    android:layout_marginTop="@dimen/_14pxv"
                    android:layout_width="@dimen/_20pxh">
                    <ImageView
                        android:id="@+id/imgEyeConfirmPassowrd"
                        android:layout_gravity="top|start"
                        android:layout_height="@dimen/_14pxv"
                        android:layout_marginBottom="@dimen/_10pxv"
                        android:layout_marginTop="@dimen/_3pxv"
                        android:layout_width="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_eye"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_eye"
                        />
                </FrameLayout>

            </LinearLayout>




            <androidx.appcompat.widget.AppCompatButton
                android:ellipsize="end" android:gravity="center"
                android:id="@+id/btnSaveChanges"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_25pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_10pxv"
                android:paddingEnd="@dimen/_30pxh"
                android:paddingStart="@dimen/_30pxh"
                android:paddingTop="@dimen/_10pxv"
                android:singleLine="true"
                android:text="@string/lbl_save_changes"
                android:textAllCaps="false"
                style="@style/btnSolidRounded_13" tools:text="@string/lbl_save_changes"/>

        </LinearLayout>
    </ScrollView>


    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        style="@style/groupStylewhite_3"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_navigation_color_selector"
        app:itemTextColor="@drawable/bottom_navigation_color_selector"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
