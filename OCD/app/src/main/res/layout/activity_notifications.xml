<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profile.NotificationsActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp">
        <ImageView android:id="@+id/backArrow"
            android:layout_height="@dimen/_25pxh"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_width="@dimen/_24pxh"
            android:layout_marginStart="@dimen/_25pxh"
            android:paddingStart="@dimen/_5pxh"
            android:paddingEnd="@dimen/_5pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrow3"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_arrow3"/>
        <TextView
            android:id="@+id/txtSetting"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_1pxv"
            android:text="@string/lbl_notifications"
            style="@style/txtDMSansbold20"
            tools:text="@string/lbl_notifications"/>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarToolbar"
        android:layout_above="@+id/bottomNavigation">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <LinearLayout
            android:layout_gravity="top|center"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10pxv"
            android:layout_marginEnd="@dimen/_20pxh"
            android:layout_marginStart="@dimen/_20pxh"
            android:layout_marginTop="@dimen/_13pxv"
            style="@style/groupStylewhite_A700"
            android:layout_width="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAllowpushnoti"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/msg_allow_push_noti"
                    style="@style/txtNunitoSansregular14_1"
                    tools:text="@string/msg_allow_push_noti" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkBoxtxtAllowPushNotifications"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_sans"
                    android:singleLine="true"
                    android:text="@string/msg_allow_push_noti"
                    android:textColor="@color/black_900"
                    android:textStyle="normal"
                    tools:text="@string/msg_allow_push_noti" />
            </LinearLayout>

            <View android:background="@color/gray_300"
                android:layout_height="@dimen/_1pxv"
                android:layout_width="@dimen/_320pxh"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAllowpicturei"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/msg_allow_picture_i"
                    style="@style/txtNunitoSansregular14_1"
                    tools:text="@string/msg_allow_picture_i" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkBoxAllowpictureinPicture"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_sans"
                    android:singleLine="true"
                    android:text="@string/msg_allow_picture_i"
                    android:textColor="@color/black_900"
                    android:textStyle="normal"
                    tools:text="@string/msg_allow_picture_i" />
            </LinearLayout>

            <View android:background="@color/gray_300"
                android:layout_height="@dimen/_1pxv"
                android:layout_width="@dimen/_320pxh"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAllowtaskremi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/msg_allow_task_remi"
                    style="@style/txtNunitoSansregular14_1"
                    tools:text="@string/msg_allow_task_remi" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkBoxAllowTaskReminder"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_sans"
                    android:singleLine="true"
                    android:text="@string/msg_allow_task_remi"
                    android:textColor="@color/black_900"
                    android:textStyle="normal"
                    tools:text="@string/msg_allow_task_remi" />
            </LinearLayout>

            <View android:background="@color/gray_300"
                android:layout_height="@dimen/_1pxv"
                android:layout_width="@dimen/_320pxh"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtAllowappupdat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="@string/msg_allow_app_updat"
                    style="@style/txtNunitoSansregular14_1"
                    tools:text="@string/msg_allow_app_updat" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:id="@+id/checkBoxAllowAppUpdateNotification"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/nunito_sans"
                    android:singleLine="true"
                    android:text="@string/msg_allow_app_updat"
                    android:textColor="@color/black_900"
                    android:textStyle="normal"
                    tools:text="@string/msg_allow_app_updat" />
            </LinearLayout>

            <View android:background="@color/gray_300"
                android:layout_height="@dimen/_1pxv"
                android:layout_width="@dimen/_320pxh"/>

        </LinearLayout>


        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        style="@style/groupStylewhite_3"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_navigation_color_selector"
        app:itemTextColor="@drawable/bottom_navigation_color_selector"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>