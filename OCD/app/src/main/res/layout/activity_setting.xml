<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarToolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:contentInsetStart="0dp">
        <ImageView android:id="@+id/imageArrowleft"
            android:layout_height="@dimen/_25pxh"
            android:layout_marginTop="@dimen/_3pxv"
            android:layout_width="@dimen/_14pxh"
            android:layout_marginStart="@dimen/_25pxh"
            android:scaleType="fitXY"
            android:src="@drawable/img_arrow3"
            tools:ignore="ContentDescription" tools:src="@drawable/img_arrow3"/>
        <TextView
            android:id="@+id/txtSetting"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_1pxv"
            android:text="@string/lbl_settings"
            style="@style/txtDMSansbold20"
            tools:text="@string/lbl_edit_profile2"/>

    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbarToolbar"
        android:layout_above="@+id/bottomNavigation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_10pxv"
        android:layout_marginEnd="@dimen/_20pxh"
        android:layout_marginStart="@dimen/_20pxh">

        <TextView android:ellipsize="end"
            android:id="@+id/txtGeneral"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_23pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/lbl_general"
            style="@style/txtNunitoSanssemibold14_11"
            android:textSize ="@dimen/_17pxh"
            tools:text="@string/lbl_general"/>

        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumnlanguage"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15pxv"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/groupStylegray_100cornerRadius">

            <LinearLayout
                android:id="@+id/edit_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/_5pxh"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:paddingBottom="@dimen/_10pxv"
                android:paddingEnd="@dimen/_8pxh"
                android:paddingStart="@dimen/_4pxh">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/img_vector_gray_800_18x18"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="@dimen/_4pxh"/>

                <TextView
                    android:drawableEnd="@drawable/img_arrow_3_gray_800"
                    android:drawablePadding="@dimen/_30pxh"
                    android:ellipsize="end"
                    android:text="@string/lbl_edit_profile"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginStart="@dimen/_20pxh"
                    android:singleLine="true"
                    android:textColorHint="@color/gray_800"
                    style="@style/etNunitoSansregular16"/>
            </LinearLayout>
            <TextView
                android:drawableEnd="@drawable/img_arrow_3_gray_800"
                android:drawablePadding="@dimen/_30pxh"
                android:ellipsize="end"
                android:hint="@string/lbl_preferences"
                android:id="@+id/etLanguage"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5pxh"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:paddingBottom="@dimen/_10pxv"
                android:paddingEnd="@dimen/_8pxh"
                android:paddingStart="@dimen/_4pxh"
                android:layout_width="match_parent"

                android:singleLine="true"
                android:textColorHint="@color/black_900"
                style="@style/etNunitoSansregular14_1" tools:ignore="Autofill"/>
            <EditText
                android:drawableEnd="@drawable/img_arrow_3_gray_800"
                android:drawablePadding="@dimen/_30pxh"
                android:drawableStart="@drawable/img_user"
                android:ellipsize="end"
                android:hint="@string/lbl_app_shortcuts"
                android:id="@+id/etGroup856"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5pxh"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_9pxv"
                android:paddingEnd="@dimen/_8pxh"
                android:paddingStart="@dimen/_6pxh"
                android:paddingTop="@dimen/_2pxv"
                android:singleLine="true"
                android:textColorHint="@color/black_900"
                style="@style/etNunitoSansregular14_1" tools:ignore="Autofill"/>
            <LinearLayout android:id="@+id/linearRowarrowfive"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearRowlocation"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageLocation"
                        android:layout_height="@dimen/_21pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_width="@dimen/_16pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_location_gray_800"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_location_gray_800"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtChangePassword"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_9pxh"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_weight="0.88"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@string/lbl_change_password"
                        style="@style/txtNunitoSansregular14_1" tools:text="@string/lbl_change_password"/>
                </LinearLayout>
                <ImageView android:id="@+id/imageArrowFive"
                    android:layout_height="@dimen/_2pxh"
                    android:layout_marginBottom="@dimen/_9pxv"
                    android:layout_marginStart="@dimen/_157pxh"
                    android:layout_marginTop="@dimen/_11pxv"
                    android:layout_width="@dimen/_1pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrow_3_gray_800"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_3_gray_800"/>
            </LinearLayout>
        </LinearLayout>

        <TextView android:ellipsize="end"
            android:id="@+id/txtPersonalizationOne"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_22pxv"
            android:layout_width="wrap_content"
            android:singleLine="true"
            android:text="@string/lbl_personalization"
            style="@style/txtNunitoSanssemibold14_11" tools:text="@string/lbl_personalization"/>
        <LinearLayout android:gravity="center_horizontal"
            android:id="@+id/linearColumngroup858"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylegray_100cornerRadius">
            <EditText
                android:drawableEnd="@drawable/img_arrow_3_gray_800"
                android:drawablePadding="@dimen/_30pxh"
                android:drawableStart="@drawable/img_vector_gray_800_20x20"
                android:ellipsize="end"
                android:hint="@string/lbl_notifications"
                android:id="@+id/etGroup858"
                android:inputType="text"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_5pxh"
                android:layout_marginStart="@dimen/_5pxh"
                android:layout_marginTop="@dimen/_9pxv"
                android:layout_width="match_parent"
                android:paddingBottom="@dimen/_10pxv"
                android:paddingEnd="@dimen/_8pxh"
                android:paddingStart="@dimen/_3pxh"
                android:paddingTop="@dimen/_1pxv"
                android:singleLine="true"
                android:textColorHint="@color/black_900"
                style="@style/etNunitoSansregular14_1" tools:ignore="Autofill"/>
            <LinearLayout android:id="@+id/linearRowarrowseven"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_8pxv"
                android:layout_marginEnd="@dimen/_13pxh"
                android:layout_marginStart="@dimen/_7pxh"
                android:layout_marginTop="@dimen/_9pxv"
                android:layout_width="match_parent" android:orientation="horizontal">
                <LinearLayout android:id="@+id/linearRowvectorOne"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.99"
                    android:layout_width="0dp" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageVectorOne"
                        android:layout_height="@dimen/_20pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_width="@dimen/_22pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_vector_gray_800_20x22"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_vector_gray_800_20x22"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtChangeLanguage"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_5pxh"
                        android:layout_marginTop="@dimen/_1pxv"
                        android:layout_weight="0.84"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="@string/lbl_change_language"
                        style="@style/txtNunitoSansregular14_1" tools:text="@string/lbl_change_language"/>
                </LinearLayout>
                <ImageView android:id="@+id/imageArrowSeven"
                    android:layout_height="@dimen/_2pxh"
                    android:layout_marginBottom="@dimen/_9pxv"
                    android:layout_marginStart="@dimen/_156pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="@dimen/_1pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_arrow_3_gray_800"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_arrow_3_gray_800"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>




    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        style="@style/groupStylewhite_3"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@drawable/bottom_navigation_color_selector"
        app:itemTextColor="@drawable/bottom_navigation_color_selector"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>